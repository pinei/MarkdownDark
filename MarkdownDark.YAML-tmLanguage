  url:
    match: |
      (?xi)
      (?:
        (<)
        (
          (?:(?:https?|ftp)://)
          (?:\S+(?::\S*)?@)?
          (?:
          (?:[1-9]\d?|1\d\d|2[01]\d|22[0-3])
          (?:\.(?:1?\d{1,2}|2[0-4]\d|25[0-5])){2}
          (?:\.(?:[1-9]\d?|1\d\d|2[0-4]\d|25[0-4]))
          |
          (?:(?:[\da-z\x{00a1}-\x{ffff}][-_]*)*[\da-z\x{00a1}-\x{ffff}]+)
          (?:\.(?:[\da-z\x{00a1}-\x{ffff}][-_]*)*[\da-z\x{00a1}-\x{ffff}]+)*
          (?:\.(?:[a-z\x{00a1}-\x{ffff}]{2,}))
          \.?
          )
          (?::\d{2,5})?
          (?:[/?#](?:\S*[^_*\s]+)?)?
        )
        (>)
      )
      |
      (
        (?:(?:https?|ftp)://)
        (?:\S+(?::\S*)?@)?
        (?:
        (?:[1-9]\d?|1\d\d|2[01]\d|22[0-3])
